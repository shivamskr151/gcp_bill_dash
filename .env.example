# ---- Exporter (BigQuery -> Prometheus metrics) ----
GCP_PROJECT_ID=your-gcp-project-id
GCP_BILLING_ACCOUNT_ID=your-billing-account-id
BQ_BILLING_DATASET=your_bigquery_dataset
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/service-account.json

EXPORTER_HOST=0.0.0.0
EXPORTER_PORT=9091
EXPORTER_METRICS_ENDPOINT=/metrics

# ---- Prometheus scrape config (generated) ----
PROMETHEUS_SCRAPE_TARGET=host.docker.internal:9091
PROMETHEUS_SCRAPE_INTERVAL=60s
PROMETHEUS_GLOBAL_SCRAPE_INTERVAL=30s
PROMETHEUS_GLOBAL_EVALUATION_INTERVAL=30s
PROMETHEUS_METRICS_PATH=/metrics

# ---- Docker ports (host) ----
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ---- Grafana admin ----
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me
GRAFANA_ROOT_URL=http://localhost:3000

# ---- HTML dashboard (generated) ----
DASHBOARD_PROMETHEUS_URL=http://localhost:9090

# Name shown in HTML dropdown
DASHBOARD_PROJECT_NAME=My Project
